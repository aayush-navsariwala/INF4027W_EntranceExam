@model INF4001N_1814748_NVSAAY001_2024.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center login-title">Login</h2>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header text-center" style="background-color: #0047ab; color: white;">
                <h3 class="mb-0">Please Sign In</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Add ReturnUrl hidden field -->
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Email -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label fw-bold" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg login-btn">Login</button>
                        <br />
                        @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", null, new { @class = "btn btn-link mt-3" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<<style>
     body {
         background-color: #f8f9fa;
         color: #212529;
     }

     .login-title {
         color: #0047ab; /* South African blue */
         font-weight: bold;
         text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3);
     }

     .card {
         border: 1px solid #ddd;
         border-radius: 10px;
         overflow: hidden;
         background: white;
     }

     .card-header {
         background: linear-gradient(90deg, #0047ab, #ffb400, #28a745, #ff0000, #000000); /* South African flag colors */
         color: white;
         text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
         font-weight: bold;
     }

     .form-label {
         color: #0047ab; /* South African blue */
     }

     .form-control {
         border: 1px solid #ddd;
         border-radius: 5px;
         padding: 0.75rem;
     }

         .form-control:focus {
             border-color: #28a745; /* South African green */
             box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
         }

     .login-btn {
         background-color: #0047ab; /* South African blue */
         color: white;
         border: none;
         padding: 0.75rem 1.5rem;
         transition: transform 0.3s ease-in-out;
     }

         .login-btn:hover {
             background-color: #003580; /* Darker blue */
             transform: scale(1.05);
         }

     .btn-link {
         color: #ffb400; /* South African gold */
         text-decoration: underline;
     }

         .btn-link:hover {
             color: #cc8b00; /* Darker gold */
