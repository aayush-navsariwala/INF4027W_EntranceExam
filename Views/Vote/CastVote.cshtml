        max-width: 120px;
        max-height: 120px;
        object-fit: cover;
        margin: 0 auto;
        border: 2px solid #28a745; /* South African green */
        border-radius: 50%;
    }

    .card {
        border: 2px solid #212529;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
            border-color: #ffb400; /* South African gold */
        }

    .card-body {
        background-color: #ffffff;
        padding: 15px;
    }

